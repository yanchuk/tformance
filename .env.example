# This is a template for the `.env` file that is used as part of local development.
# You can copy this file, rename it to `.env` and fill in the missing values,
# then delete this header.
###############################################################################

# This file should contain all the secrets required by *development* (local) application.
# This file is ignored by git by default to avoid accidentally exposing secrets in your repository.

# REQUIRED: Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY="your-secret-key-here"

# REQUIRED for development: Set to True to enable debug mode
DEBUG=True

# REQUIRED: Set allowed hosts for your environment
ALLOWED_HOSTS=localhost,127.0.0.1

# host should be "localhost" for native development or "db" for docker-based development
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/tformance"
# host should be "localhost" for native development or "redis" for docker-based development
REDIS_URL="redis://localhost:6379"

# Flower monitoring UI credentials (used by docker-compose, format: user:password)
FLOWER_BASIC_AUTH="admin:admin"

# REQUIRED: Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# Used to encrypt OAuth tokens stored in the database
INTEGRATION_ENCRYPTION_KEY="your-fernet-key-here"

GOOGLE_ANALYTICS_ID=""
SENTRY_DSN=""

# Social login credentials go here

GOOGLE_CLIENT_ID=""
GOOGLE_SECRET_ID=""

# GitHub OAuth (for social login and Copilot metrics)
# Scope: read:org, read:user, user:email, manage_billing:copilot (optional)
GITHUB_CLIENT_ID=""
GITHUB_SECRET_ID=""

# GitHub App (RECOMMENDED - for PRs, members, repos)
# Create at: https://github.com/settings/apps
# Permissions: Pull requests (Read), Members (Read), Email (Read) - NO Contents!
# This supports the "we don't have access to your code" claim
# Set GITHUB_APP_ENABLED=True once you have App credentials
GITHUB_APP_ENABLED=False
GITHUB_APP_ID=""
GITHUB_APP_NAME="tformance"
GITHUB_APP_PRIVATE_KEY=""
# GitHub App Webhook Secret (for revocation detection)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# Enable webhooks in GitHub App settings: https://github.com/settings/apps/[app-name]
# Webhook URL: https://your-domain.com/webhooks/github-app/
# Subscribe to: installation events (created, deleted, suspended, unsuspended)
GITHUB_APP_WEBHOOK_SECRET=""

JIRA_CLIENT_ID=""
JIRA_CLIENT_SECRET=""

SLACK_CLIENT_ID=""
SLACK_CLIENT_SECRET=""
SLACK_SIGNING_SECRET=""

# turnstile setup - add your keys here to enable turnstile
TURNSTILE_KEY=""
TURNSTILE_SECRET=""

# put your stripe keys here
STRIPE_LIVE_PUBLIC_KEY="pk_live_***"
STRIPE_LIVE_SECRET_KEY="sk_live_***"
STRIPE_TEST_PUBLIC_KEY="pk_test_***"
STRIPE_TEST_SECRET_KEY="sk_test_***"
STRIPE_PRICING_TABLE_ID="prctbl_***"

# public media storage config
USE_S3_MEDIA=False
AWS_STORAGE_BUCKET_NAME=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Email configuration (Resend.com)
# Uncomment and set these for production email sending

# RESEND_API_KEY=re_xxxxxxxxxxxx
# EMAIL_BACKEND=anymail.backends.resend.EmailBackend
# DEFAULT_FROM_EMAIL=tformance <noreply@ianchuk.com>
# SERVER_EMAIL=noreply@ianchuk.com

HEALTH_CHECK_TOKENS=

# PostHog Analytics (optional)
# Get your API key from https://posthog.com
POSTHOG_API_KEY=""
POSTHOG_HOST="https://us.i.posthog.com"

# Google Gemini AI (optional - for LLM-powered insights)
# Get your API key from https://aistudio.google.com/apikey
GOOGLE_AI_API_KEY=""

# GitHub Seeding Tokens (optional - for real project demo data)
# Create PATs with 'public_repo' scope at https://github.com/settings/tokens
# Multiple tokens (comma-separated) for rate limit pooling
GITHUB_SEEDING_TOKENS=""

# Logging configuration (optional)
# Available levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
DJANGO_LOG_LEVEL=INFO
CELERY_LOG_LEVEL=INFO
APPS_LOG_LEVEL=INFO
TFORMANCE_LOG_LEVEL=INFO
