# This is a template for the `.env` file that is used as part of local development.
# You can copy this file, rename it to `.env` and fill in the missing values,
# then delete this header.
###############################################################################

# This file should contain all the secrets required by *development* (local) application.
# This file is ignored by git by default to avoid accidentally exposing secrets in your repository.

# REQUIRED: Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY="your-secret-key-here"

# REQUIRED for development: Set to True to enable debug mode
DEBUG=True

# REQUIRED: Set allowed hosts for your environment
ALLOWED_HOSTS=localhost,127.0.0.1

# host should be "localhost" for native development or "db" for docker-based development
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/tformance"
# host should be "localhost" for native development or "redis" for docker-based development
REDIS_URL="redis://localhost:6379"

# REQUIRED: Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# Used to encrypt OAuth tokens stored in the database
INTEGRATION_ENCRYPTION_KEY="your-fernet-key-here"

GOOGLE_ANALYTICS_ID=""
SENTRY_DSN=""

# Social login credentials go here

GOOGLE_CLIENT_ID=""
GOOGLE_SECRET_ID=""

GITHUB_CLIENT_ID=""
GITHUB_SECRET_ID=""

JIRA_CLIENT_ID=""
JIRA_CLIENT_SECRET=""

SLACK_CLIENT_ID=""
SLACK_CLIENT_SECRET=""
SLACK_SIGNING_SECRET=""

# turnstile setup - add your keys here to enable turnstile
TURNSTILE_KEY=""
TURNSTILE_SECRET=""

# put your stripe keys here
STRIPE_LIVE_PUBLIC_KEY="pk_live_***"
STRIPE_LIVE_SECRET_KEY="sk_live_***"
STRIPE_TEST_PUBLIC_KEY="pk_test_***"
STRIPE_TEST_SECRET_KEY="sk_test_***"
STRIPE_PRICING_TABLE_ID="prctbl_***"

# public media storage config
USE_S3_MEDIA=False
AWS_STORAGE_BUCKET_NAME=
AWS_ACCESS_KEY_ID=
