{
    "version": "1.0",
    "description": "Skill activation triggers for tformance Django project. Controls when skills automatically suggest or block actions.",
    "skills": {
        "tdd-integration": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "TDD Red-Green-Refactor workflow for Django",
            "promptTriggers": {
                "keywords": [
                    "implement",
                    "add feature",
                    "build",
                    "create functionality",
                    "new feature",
                    "implement feature"
                ],
                "intentPatterns": [
                    "(implement|add|create|build).*?(feature|functionality|endpoint|view|model|api)",
                    "(how to|help me).*?(implement|add|create|build)"
                ]
            },
            "fileTriggers": {
                "pathPatterns": [
                    "apps/**/views.py",
                    "apps/**/models.py",
                    "apps/**/serializers.py",
                    "apps/**/urls.py"
                ],
                "pathExclusions": [
                    "apps/**/tests/**",
                    "apps/**/migrations/**"
                ]
            }
        },
        "django-dev-guidelines": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Django development patterns (views, models, DRF, Celery, Teams)",
            "promptTriggers": {
                "keywords": [
                    "django",
                    "view",
                    "model",
                    "serializer",
                    "viewset",
                    "DRF",
                    "rest framework",
                    "celery",
                    "task",
                    "migration",
                    "queryset",
                    "manager",
                    "team",
                    "BaseModel",
                    "BaseTeamModel"
                ],
                "intentPatterns": [
                    "(create|add|implement|build).*?(view|model|serializer|endpoint|api|task)",
                    "(fix|handle|debug).*?(django|view|model|queryset)",
                    "(how to|best practice).*?(django|view|model|serializer)"
                ]
            },
            "fileTriggers": {
                "pathPatterns": [
                    "apps/**/*.py",
                    "tformance/**/*.py"
                ],
                "pathExclusions": [
                    "apps/**/tests/**",
                    "apps/**/migrations/**",
                    "**/__pycache__/**"
                ],
                "contentPatterns": [
                    "from django",
                    "from rest_framework",
                    "class.*View",
                    "class.*Model",
                    "class.*Serializer"
                ]
            }
        },
        "htmx-alpine-flowbite-guidelines": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "HTMX + Alpine.js + Flowbite + DaisyUI patterns",
            "promptTriggers": {
                "keywords": [
                    "htmx",
                    "alpine",
                    "flowbite",
                    "daisyui",
                    "template",
                    "component",
                    "frontend",
                    "UI",
                    "tailwind",
                    "hx-get",
                    "hx-post",
                    "x-data",
                    "x-on"
                ],
                "intentPatterns": [
                    "(create|add|build|update).*?(component|template|UI|page|modal|form)",
                    "(how to|best practice).*?(htmx|alpine|flowbite|template)",
                    "(style|design|layout).*?(component|UI|page)"
                ]
            },
            "fileTriggers": {
                "pathPatterns": [
                    "templates/**/*.html",
                    "assets/**/*.js",
                    "assets/**/*.ts"
                ],
                "contentPatterns": [
                    "hx-get",
                    "hx-post",
                    "hx-trigger",
                    "x-data",
                    "x-on:",
                    "alpine",
                    "flowbite"
                ]
            }
        },
        "skill-developer": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "medium",
            "description": "Meta-skill for creating and managing Claude Code skills",
            "promptTriggers": {
                "keywords": [
                    "skill system",
                    "create skill",
                    "add skill",
                    "skill triggers",
                    "skill rules",
                    "hook system",
                    "skill development",
                    "skill-rules.json"
                ],
                "intentPatterns": [
                    "(how do|how does|explain).*?skill",
                    "(create|add|modify|build).*?skill",
                    "skill.*?(work|trigger|activate|system)"
                ]
            }
        },
        "prompt-engineer": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Prompt engineering best practices for LLM prompts (GPT, reasoning models, Groq)",
            "promptTriggers": {
                "keywords": [
                    "prompt engineering",
                    "LLM prompt",
                    "system prompt",
                    "user prompt",
                    "prompt optimization",
                    "prompt template",
                    "few-shot",
                    "prompt design",
                    "prompt iteration",
                    "prompt testing",
                    "promptfoo",
                    "eval prompts",
                    "Groq",
                    "LiteLLM",
                    "assistant response",
                    "chain of thought",
                    "reasoning model",
                    "prompt tuning"
                ],
                "intentPatterns": [
                    "(create|write|improve|optimize|design).*?prompt",
                    "(how to|best practice).*?prompt",
                    "(improve|fix|debug).*?(LLM|prompt|response)",
                    "prompt.*?(engineering|optimization|design|template)",
                    "(few-shot|zero-shot).*?(learning|example)"
                ]
            },
            "fileTriggers": {
                "pathPatterns": [
                    "apps/**/prompts/**",
                    "apps/**/services/*llm*.py",
                    "apps/**/services/*prompt*.py"
                ],
                "contentPatterns": [
                    "system_prompt",
                    "user_prompt",
                    "few.?shot",
                    "PROMPT_VERSION",
                    "build_.*_prompt"
                ]
            }
        },
        "writing-well": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Clear writing principles from 'On Writing Well' by William Zinsser",
            "promptTriggers": {
                "keywords": [
                    "writing",
                    "copy",
                    "copywriting",
                    "landing page",
                    "marketing",
                    "content",
                    "headline",
                    "tagline",
                    "CTA",
                    "call to action",
                    "button text",
                    "error message",
                    "about page",
                    "blog post",
                    "email copy",
                    "microcopy",
                    "product description",
                    "notification text",
                    "empty state",
                    "onboarding copy"
                ],
                "intentPatterns": [
                    "(write|create|improve|edit|draft|craft).*?(copy|content|text|headline|tagline|message)",
                    "(how to|best practice).*?(write|copy|content)",
                    "(improve|fix|rewrite).*?(copy|content|text|wording)",
                    "(landing page|marketing|email).*?(copy|content|text)"
                ]
            },
            "fileTriggers": {
                "pathPatterns": [
                    "templates/web/**/*.html",
                    "templates/emails/**/*.html",
                    "templates/emails/**/*.txt",
                    "static/**/*.md",
                    "content/**/*"
                ],
                "contentPatterns": [
                    "hero.?section",
                    "cta",
                    "tagline",
                    "headline"
                ]
            }
        },
        "cto-marketing-copy": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "CTO and developer-focused marketing copy patterns for Tformance",
            "promptTriggers": {
                "keywords": [
                    "CTO copy",
                    "developer marketing",
                    "positioning",
                    "differentiation",
                    "comparison page",
                    "landing page copy",
                    "value proposition",
                    "ICP messaging",
                    "competitor",
                    "vs LinearB",
                    "vs Jellyfish",
                    "vs DX",
                    "vs Swarmia",
                    "pricing copy",
                    "CTO messaging",
                    "engineering leader"
                ],
                "intentPatterns": [
                    "(write|create|draft).*?(copy|messaging|headline).*?(CTO|engineering|developer)",
                    "(CTO|engineering leader|VP eng).*?(copy|messaging|content)",
                    "(comparison|versus|vs).*?(competitor|LinearB|Jellyfish|DX|Swarmia)",
                    "(differentiate|position|compare).*?(competitor|tool|platform)"
                ]
            },
            "fileTriggers": {
                "pathPatterns": [
                    "templates/web/compare/**",
                    "templates/web/pricing.html",
                    "apps/web/compare_data.py"
                ],
                "contentPatterns": [
                    "competitor",
                    "comparison",
                    "vs_",
                    "differentiator",
                    "value.?prop"
                ]
            }
        }
    },
    "notes": {
        "enforcement_types": {
            "suggest": "Skill suggestion appears but doesn't block execution",
            "block": "Requires skill to be used before proceeding (guardrail)",
            "warn": "Shows warning but allows proceeding"
        },
        "priority_levels": {
            "critical": "Highest - Always trigger when matched",
            "high": "Important - Trigger for most matches",
            "medium": "Moderate - Trigger for clear matches",
            "low": "Optional - Trigger only for explicit matches"
        }
    }
}
